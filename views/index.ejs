<% include ./partials/header %>
<h1>Welcome to the main page!</h1>

<div class="row">
 <%city.forEach(function(city){%>
 <div class="col-xs-12 col-sm-6 col-md-4">
  <div class="item">
   <p><%=city.name%></p>
   <p><%= city.population %></p>
   <p><%= city.country %></p>
   <p><%= city.description %></p>
   <a class="btn btn-primary" href="/cities/<%=city._id%>">More Info</a>
  </div>
 </div>
 <%})%>
</div>




<a href="/cities/new">Nieuwe stad aanmaken</a>

<% include ./partials/footer %>