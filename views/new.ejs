<% include ./partials/header %>

<h1 class="my-3">Add a new city</h1>
<form action="/cities" method="POST">
  <div class="form-group row">
    <label for="" class="col-sm-2 col-form-label">City name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="" name="city[name]" placeholder="Name" />
    </div>
  </div>
  <div class="form-group row">
    <label for="" class="col-sm-2 col-form-label">Image</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="" name="city[image]" placeholder="Image URL" />
    </div>
  </div>
  <div class="form-group row">
    <label for="" class="col-sm-2 col-form-label">Country</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="" name="city[country]" placeholder="Country" />
    </div>
  </div>
  <div class="form-group row">
    <label for="" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <textarea
        class="form-control"
        id=""
        rows="5"
        name="city[description]"
        required
        placeholder="Enter description here"
      ></textarea>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <input class="btn btn-primary" type="submit" value="Add new city" />
    </div>
  </div>
</form>
<% include ./partials/footer %>
