<% include ./partials/header %>
<h1>Welcome to the edit page</h1>
<form class="ui form" action="/cities/<%= city._id%>?_method=PUT" method="POST">
  <div class="form-group row">
    <label for="" class="col-sm-2 col-form-label">City name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="" name="city[name]" value="<%=city.name%>" />
    </div>
  </div>
  <div class="form-group row">
    <label for="" class="col-sm-2 col-form-label">Image</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="" name="city[image]" value="<%=city.image%>" />
    </div>
  </div>
  <div class="form-group row">
    <label for="" class="col-sm-2 col-form-label">Country</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="" name="city[country]" value="<%=city.country%>" />
    </div>
  </div>
  <div class="form-group row">
    <label for="" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <textarea class="form-control" id="" rows="5" name="city[description]" required><%=city.description%></textarea>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <input class="btn btn-primary" type="submit" value="Edit" />
    </div>
  </div>
</form>
<form id="delete" action="/cities/<%=city._id%>?_method=delete" method="post">
  <button class="btn btn-primary">Delete</button>
</form>
<% include ./partials/footer %>
